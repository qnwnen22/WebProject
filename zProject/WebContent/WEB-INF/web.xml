<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>zProject</display-name>

  <servlet>
  	<servlet-name>board</servlet-name>
  	<servlet-class>board.BoardController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board</servlet-name>
  	<url-pattern>/board_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board0</servlet-name>
  	<servlet-class>board0.Board0Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board0</servlet-name>
  	<url-pattern>/board0_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board1</servlet-name>
  	<servlet-class>board1.Board1Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board1</servlet-name>
  	<url-pattern>/board1_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board2</servlet-name>
  	<servlet-class>board2.Board2Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board2</servlet-name>
  	<url-pattern>/board2_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board3</servlet-name>
  	<servlet-class>board3.Board3Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board3</servlet-name>
  	<url-pattern>/board3_servlet/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board4</servlet-name>
  	<servlet-class>board4.Board4Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board4</servlet-name>
  	<url-pattern>/board4_servlet/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>web</servlet-name>
  	<servlet-class>web.WebController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>web</servlet-name>
  	<url-pattern>/web_servlet/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 에러 페이지 설정 -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/404code.jsp</location>
  </error-page>
  
  <error-page>
  	<error-code>500</error-code>
  	<location>/error/500code.jsp</location>
  </error-page>
  
</web-app>